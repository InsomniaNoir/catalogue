<h1>New Verbiage</h1>

  <div class="col-md-8">
    <%= form_for [@category, @verbiage] do |p| %>
    <div class="form-group">
      <%= p.label :title %>
      <%= p.text_field :title, class: 'form-control', placeholder: 'Enter Verbiage Title/Description' %>
    </div>
    <div class="form-group">
      <%= p.label :body %>
      <%= p.text_area :body, class: 'form-control', placeholder: 'Enter verbiage text here' %>
    </div>
  
    <div class="form-group">
      <%= p.submit "Save", class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>
</div>
