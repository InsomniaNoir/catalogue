<%= form_for [category, verbiage] do |f| %>
  <% if verbiage.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(verbiage.errors.count, error) %>.</h4>
      <ul>
        <% verbiage.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_group_tag(verbiage.errors[:title]) do %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter verbiage description" %>
  <% end %>
  <%= form_group_tag(verbiage.errors[:title]) do %>
    <%= f.label :body %>
    <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter verbiage" %>
  <% end %>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>