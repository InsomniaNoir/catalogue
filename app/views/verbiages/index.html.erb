<h1>All Verbiage</h1>
<% if policy(Verbiage.new).create? %>
<%= link_to "New Verbiage", new_verbiage_path, class: 'btn btn-success' %>
<% end %>
<% @verbiages.each do |verbiage| %>
  <div class="media">
    <div class="media-body">
      <h4 clas="media-heading">
        <%= link_to (markdown_to_html verbiage.title), verbiage %>
      </h4>
    </div>      
  </div>
<% end %>