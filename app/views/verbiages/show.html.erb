<h1><%= markdown_to_html @verbiage.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= markdown_to_html @verbiage.body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@verbiage).edit? %>
      <%= link_to "Edit", edit_category_verbiage_path(@category, @verbiage), class: 'btn btn-success' %>
    <% end %>
    
    <% if policy(@verbiage).destroy? %>
      <%= link_to "Delete Verbiage", [@category, @verbiage], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
    <% end %>
  </div>
</div>