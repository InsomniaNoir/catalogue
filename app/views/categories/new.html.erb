<h1>New Category</h1>
 
 <div class="row">
   <div class="col-md-8">
     <%= form_for @category do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter category name" %>
       </div>
       <div class="form-group">
         <%= f.label :approved, class: 'checkbox' do %>
           <%= f.check_box :public %> Approved
         <% end %>
       </div>
       <%= f.submit "Save", class: 'btn btn-success' %>
     <% end %>
   </div>
 </div>